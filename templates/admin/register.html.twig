{% extends 'base.html.twig' %}

{% block title %}Admin | Protel{% endblock %}

{% block body %}

<h1 class="text-center my-4">Tableau admin inscrits</h1>

    {# ################# FLASHES ################# #}
    <div class="row">
        <div class="col-6 mx-auto">
            {% include 'include/_flashes.html.twig' %}
        </div>
    </div>
    {# ################# FLASHES ################# #}

<div class="row">

    <div class="col-10 mx-auto my-4">
        <table class="table">
            <thead>
                <tr class="text-center text-dark align-middle">
                    <th>#</th>
                    <th>Rôle</th>
                    <th>Mot de passe</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Civilité</th>
                    <th>Option</th>
                </tr>
            </thead>

            <tbody>
                    <tr class="text-center">
                        <th class="text-center text-dark align-middle"></th>
                        <td class="text-center text-dark align-middle"></td>
                        <td class="text-center text-dark align-middle"></td>
                        <td class="text-center text-dark align-middle"></td>
                        <td class="text-center text-dark align-middle"></td>
                        <td class="text-center text-dark align-middle"></td>
                        <td class="text-center text-dark align-middle"></td>
                        <td class="text-center text-dark align-middle">
                            <a href="" class="text-info align-middle text-center" title="Modifier"><i class="bi bi-pencil-square mx-1"></i></a>
                            <a href="" class="text-danger align-middle text-center" title="Supprimer"><i class="bi bi-trash3 mx-1"></i></a>
                        </td>
                    </tr>
            </tbody>
        </table>
    
    </div>

    <h1 class="text-center my-4">Inscrire un nouveau admin</h1>

    <div class="row">
        <div class="row col-10 mx-auto my-4">

            {{ form_start(form_membre) }}
            <div class="row">
                <div class="col-4">{{ form_row(form_membre.prenom) }}</div>
                <div class="col-4">{{ form_row(form_membre.nom) }}</div>
                <div class="col-4">{{ form_row(form_membre.civilite) }}</div>
            </div>

            <div class="row">
                <div class="col-6">{{ form_row(form_membre.email) }}</div>
                <div class="col-6">{{ form_row(form_membre.password) }}</div>
            </div>
            {{ form_end(form_membre) }}

        </div>
    </div>
    

</div>

{% endblock %}
