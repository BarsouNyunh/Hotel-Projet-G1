{% extends 'base.html.twig' %}

{% block title %}Connexion Admin | Protel{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-4">
            <form method="post" class="form-signin my-4">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vou êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}

                <h1 class="text-center my-4">Connexion</h1>

                <div class="form-floating mb-3">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <label for="inputEmail">Email</label>
                </div>

                <div class="form-floating mb-3 position-relative">
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    <label for="inputPassword">Mot de passe</label>
                    <button type="button" id="showPasswordBtn" class="btn position-absolute end-0 top-50 translate-middle-y">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>

                <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-lg btn-outline-success w-100 mt-3" type="submit">
                    Connexion
                </button>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        const showPasswordBtn = document.querySelector('#showPasswordBtn');
        const passwordInput = document.querySelector('#inputPassword');

        showPasswordBtn.addEventListener('click', () => {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                showPasswordBtn.innerHTML = '<i class="bi bi-eye-slash"></i>';
            } else {
                passwordInput.type = 'password';
                showPasswordBtn.innerHTML = '<i class="bi bi-eye"></i>';
            }
        });
    </script>
{% endblock %}
